  <section id="userInformation" class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="user-info">
          <img src="{{userData.img}}" alt="Foto do Usuário" class="img-fluid" id="userImage">

          <h2>{{userData.name}}</h2>
          <strong>Idade:</strong> {{userData.age}} anos<br>
          <strong>Endereço:</strong> {{userData.address}}
        </div>
      </div>
      <div class="col-md-9">
        <div class="user-info">
          <h4>Biografia:</h4>
          <p>{{userData.biography}}</p>
        </div>
        <div class="text-end">
          <button id="openModalBtn" class="btn btn-primary">Editar</button>
        </div>
      </div>
    </div>
  </section>
    <div id="modal" class="modal">
      <div id="userUpdateDiv" class="modal-content">
          <h2>Atualizar</h2>

          <form id="userForm" method="post" action="/submit">
          {{#if userData.id}}
              <input type="hidden" name="id" value="{{userData.id}}">
          {{/if}}
          <div class="mb-3">
              <label for="name">Nome:</label><br>
              <input type="text" id="name" name="name" value="{{userData.name}}">
          </div>
          <div class="mb-3">
              <label for="age">Idade:</label><br>
              <input type="number" id="age" name="age" value="{{userData.age}}">
          </div>
          <div class="mb-3">
              <label for="address">Endereço:</label><br>
              <input type="text" id="address" name="address" value="{{userData.address}}">
          </div>
          <div class="mb-3">
              <label for="img">Imagem de Perfil:</label><br>
              <input type="text" id="img" name="img" value="{{userData.img}}">
          </div>
          <div class="mb-3">
              <label for="biography">Biografia:</label><br>
              <textarea class="form-control" id="biography" name="biography">{{userData.biography}}</textarea>
          </div>
          <input type="submit" id="updateButton"  value="Salvar">
      </form>
      </div>
    </div>
